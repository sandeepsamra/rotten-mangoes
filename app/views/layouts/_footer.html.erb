<footer>
  <small>
    <% if current_user %>
      Signed in as <%= current_user.full_name %> (<%= link_to "Log out", session_path("current"), method: :delete %>)
      <% if current_user.admin == true %>
        <%= link_to "List of Users", admin_users_path %>
      <% else %>
        <%= link_to "List of Users", movies_path %>
        <% flash.now[:alert] = "You must be an admin to access all users." %>
      <% end %>
    <% else %>
      <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
    <% end %>
  </small>

</footer>